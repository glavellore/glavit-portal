</head>
<body>
    <section class="top">
        <div class="contain">
            
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">
                  <a class="navbar-brand" href="/">ગુજરાતી સાહિત્યિક સંગઠન</a>
                  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                  <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto justify-content-end">
                      <li class="nav-item">
                        <a class="nav-link" href="https://www.instagram.com/gla_vit/"><i class="fab fa-instagram"></i></a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="https://www.facebook.com/gla.vitu/"><i class="fab fa-facebook"></i></a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="mailto:gla@vit.ac.in"><i class="far fa-envelope"></i></a>
                      </li>
    
                    </ul>
                  </div>
                </div>
            </nav>

            <div class="top-upper-layer">

            </div>
            <div class="separator">
                <div class="logo">
                    <img src="images/logo_bg.png" alt="" class="logo-bg">
                    <img src="images/logo_upper.svg" alt="" class="logo-fg">
                </div>
            </div>
            
            <div class="particles" id="particles">
                <script type="text/javascript" src="particles.js"></script>
                <script type="text/javascript" src="particle-div.js"></script>
            </div>
        </div>
    </section>

    <section class="main">

        <div class="game">
            <h1 class="mb-4">ટિપ્પણી</h1>
            <form name="google-sheet" method="post" class="row">
                <div class="mb-3 col-lg-6 mx-auto">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
            <div class="card">
                
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel" data-bs-interval="false">
                    <div class="carousel-indicators">
                      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        
                      <div class="carousel-item active">
                          <div class="question-img"><img src="images/q1.jpg" class="d-block mx-auto" alt="..."></div>
                          <div class="answer col-sm-8 mx-auto">
                            <div class="mb-3">
                                <label for="exampleFormControlTextarea1" class="form-label">Caption It!</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="q1"></textarea>
                            </div>
                          </div>
                      </div>
                      <div class="carousel-item">
                        <div class="question-img"><img src="images/q2.jpg" class="d-block mx-auto" alt="..."></div>
                        <div class="answer col-sm-8 mx-auto">
                          <div class="mb-3">
                              <label for="exampleFormControlTextarea2" class="form-label">Caption It!</label>
                              <textarea class="form-control" id="exampleFormControlTextarea2" rows="3" name="q2"></textarea>
                          </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="question-img"><img src="images/q3.jpg" class="d-block mx-auto" alt="..."></div>
                        <div class="answer col-sm-8 mx-auto">
                          <div class="mb-3">
                              <label for="exampleFormControlTextarea3" class="form-label">Caption It!</label>
                              <textarea class="form-control" id="exampleFormControlTextarea3" rows="3" name="q3"></textarea>
                          </div>
                        </div>
                    </div>
                      
                      
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                      <span class="carousel-control-next-icon" aria-hidden="true"></span>
                      <span class="visually-hidden">Next</span>
                    </button>
                  </div>
                
            </div>
            
            <button type="submit" class="btn btn-warning my-4 col-lg-3 col-md-4 col-sm-10 mx-auto">Submit</button>
           
        </form>
        </div>

       
    </section>

    <section id="footer">
        <div class="container-fluid">
          <p>© Copyright <span id="Copyright"></span> GLA_VIT</p>
        </div>
    </section>
    <script>
        const scriptURL = 'https://script.google.com/macros/s/AKfycbw5WZcQe6-7IfpsPt6MdzD2QBjuQqenpYTTwxzXsj2tJUaQ84t0bffdpDd8iuLZmMJqIw/exec'
            const form = document.forms['google-sheet']
          
            form.addEventListener('submit', e => {
              e.preventDefault()
              fetch(scriptURL, { method: 'POST', body: new FormData(form)})
                .then(response => window.location.replace("./response"))
                .catch(error => console.error('Error!', error.message))
            });
    </script>
    <script src="script.js"></script>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>
</html>