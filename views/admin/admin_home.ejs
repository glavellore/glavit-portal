<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GLA VIT</title>

    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    
    <!-- favicon -->
    <link rel="icon" href="images/favicon.ico">

    <!-- fontawesome -->
    <link rel="stylesheet" href="fontawesome-free/css/all.css">

    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Cabin:wght@400;500;700&family=Mukta+Vaani:wght@400;600;700;800&family=Shrikhand&display=swap" rel="stylesheet">
    
    <!-- custom stylesheet -->
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <section class="top">
        <div class="contain">
            
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">
                  <a class="navbar-brand" href="/">ગુજરાતી સાહિત્યિક સંગઠન</a>
                  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                  <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto justify-content-end">
                      <li class="nav-item">
                        <a class="nav-link" href="/admin">Logout</a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="https://www.instagram.com/gla_vit/"><i class="fab fa-instagram"></i></a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="https://www.facebook.com/gla.vitu/"><i class="fab fa-facebook"></i></a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="mailto:gla@vit.ac.in"><i class="far fa-envelope"></i></a>
                      </li>
    
                    </ul>
                  </div>
                </div>
            </nav>

            <div class="top-upper-layer">

            </div>
            <div class="separator">
                <div class="logo">
                    <img src="images/logo_bg.png" alt="" class="logo-bg">
                    <img src="images/logo_upper.svg" alt="" class="logo-fg">
                </div>
            </div>
            
            <div class="particles" id="particles">
                <script type="text/javascript" src="particles.js"></script>
                <script type="text/javascript" src="particle-div.js"></script>
            </div>
        </div>
    </section>

    
    <section class="main">

        <div class="custom-margin">
            <h1 class="mb-4">Results</h1>
            
            <div class="container-fluid row">
              <% if(results.length === 0) { %>
                <img class="col-lg-4 col-md-6 col-sm-6 mx-auto" src="images/no_result.svg" alt="">
                <h3 class="text-center mt-4 orange">No results found</h3>
              <% } %>
              <% results.forEach(element => { %>
                <div class="col-lg-4 col-md-6 cart-item">
                  <form action="<%= element.resultLink %>" method="get">
                    
                  <div class="card mx-auto">
                    <img src="<%= element.path %>" class="card-img-top" alt="...">
                    <div class="card-body text-left">
                      <h5 class="card-title"><%= element.name %></h5>
                      <button class="btn btn-outline-warning" type="submit">See results</button>
                    </div>
                  </div>
                </form>
                </div>
              <% }); %> 
            </div>
        </div>

       
    </section>

    <section id="footer">
        <div class="container-fluid">
          <p>© Copyright <span id="Copyright"></span> GLA_VIT</p>
        </div>
    </section>

    <script src="script.js"></script>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>
</html>