<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GLA VIT</title>

    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    
    <!-- favicon -->
    <link rel="icon" href="images/favicon.ico">

    <!-- fontawesome -->
    <link rel="stylesheet" href="fontawesome-free/css/all.css">

    <!-- google fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Cabin:wght@400;500;700&family=Mukta+Vaani:wght@400;600;700;800&family=Shrikhand&display=swap" rel="stylesheet">
    
    <!-- custom stylesheet -->
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <section class="top">
        <div class="contain">
            
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">
                  <a class="navbar-brand" href="/">ગુજરાતી સાહિત્યિક સંગઠન</a>
                  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                  <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto justify-content-end">
                      <li class="nav-item">
                        <a class="nav-link" href="https://www.instagram.com/gla_vit/"><i class="fab fa-instagram"></i></a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="https://www.facebook.com/gla.vitu/"><i class="fab fa-facebook"></i></a>
                      </li>
                      <li class="nav-item">
                        <a class="nav-link" href="mailto:gla@vit.ac.in"><i class="far fa-envelope"></i></a>
                      </li>
    
                    </ul>
                  </div>
                </div>
            </nav>

            <div class="top-upper-layer">

            </div>
            <div class="separator">
                <div class="logo">
                    <img src="images/logo_bg.png" alt="" class="logo-bg">
                    <img src="images/logo_upper.svg" alt="" class="logo-fg">
                </div>
            </div>
            
            <div class="particles" id="particles">
                <script type="text/javascript" src="particles.js"></script>
                <script type="text/javascript" src="particle-div.js"></script>
            </div>
        </div>
    </section>

    
    <section class="main">
        <div class="custom-margin">
            <% if(alert.length > 0){ %>

                <div class="alert alert-primary alert-dismissible fade show col-lg-6 col-md-8 colo-sm-10 mx-auto" role="alert">
                    <%= alert %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
              
              <% } %>
            
            <h1>Spotlight</h1>

            <% if(spotlight.length > 0){ %>

                <% spotlight.forEach(element => { %>

                    <div class="card col-lg-6 col-md-8 col-sm-8">
                        <div class="img-container">
                            <img src="<%= element.path %>" alt="" class="card-img">
                        </div>
                        <div class="card-label">
                            <a role="button" href="<%= element.href %>" class="btn btn-warning my-auto">Open</a>
                        </div>
                    </div>

                <% }); %>

            <% } else { %>   
                <h3 class="col-lg-4 col-md-6 col-sm-6 col-8 ms-auto custom-top-margin custom-align-right">Stay tuned to our social media for upcoming events</h3>
                <img src="images/gla_events/no_events.svg" class="col-lg-4 col-md-6 col-sm-6 col-8 me-auto custom-top-margin" alt="">
            <% } %>
            <h1 class="custom-top-margin">Previous events</h1>
            <div class="row">
            <% prev.forEach(element => { %>

                <div class="card col-lg-3 col-md-4 col-sm-8 p-0">
                    <div class="img-container">
                        <img src="<%= element.path %>" alt="" class="card-img">
                    </div>
                    <div class="card-label">
                        <span class="card-bottom-text"><%= element.name %></span>
                    </div>
                </div>

            <% }); %>
            </div>
            
            <div class="board row">
                <h1 class="custom-top-margin">Board 20-21</h1>
                <div class="card col-lg-3 col-md-4 col-sm-8 p-0">
                    <div class="img-container">
                        <img src="images/m1.png" alt="" class="card-img">
                    </div>
                    <div class="card-label">
                        <span class="card-bottom-text">Arka Gohil</span>
                    </div>
                </div>
                <div class="card col-lg-3 col-md-4 col-sm-6 p-0">
                    <div class="img-container">
                        <img src="images/m2.png" alt="" class="card-img">
                    </div>
                    <div class="card-label">
                        <span class="card-bottom-text">Preet Shah</span>
                    </div>
                </div>
                <div class="card col-lg-3 col-md-4 col-sm-6 p-0">
                    <div class="img-container">
                        <img src="images/m3.jpg" alt="" class="card-img">
                    </div>
                    <div class="card-label">
                        <span class="card-bottom-text">Awadh Vyas</span>
                    </div>
                </div>
                <div class="card col-lg-3 col-md-4 col-sm-6 p-0">
                    <div class="img-container">
                        <img src="images/m4.png" alt="" class="card-img">
                    </div>
                    <div class="card-label">
                        <span class="card-bottom-text">Pruthu Trivedi</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="footer">
        <div class="container-fluid">
          <p>© Copyright <span id="Copyright"></span> GLA_VIT</p>
        </div>
    </section>

    <script src="script.js"></script>
    
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
</body>
</html>