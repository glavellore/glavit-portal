    <section class="main">

        <div class="custom-margin">
            <h1 class="custom-h1 mb-4">Audio Trivia</h1>
            

            <h3 class="timer orange text-center mb-4 py-2 sticky-top" id="timer">01:01:00</h3>

            <form action="/trivia/submit" method="post" id="trivia-form">

            <div class="mb-3 col-lg-6 mx-auto">
              <label for="name" class="form-label orange">Name</label>
              <input type="text" class="form-control" id="name" name="name" autocomplete="off">
            </div>

            <div class="mb-3 col-lg-6 mx-auto">
              <label for="username" class="form-label orange">Whatsapp Number</label>
              <input type="text" class="form-control" id="username" name="username" maxlength="10" minlength="10" autocomplete="off">
            </div>
            <br><br><h3 class="text-center mt-4">Feel free to use Google. Best of luck ЁЯСН</h3><br><br>
            <% rounds.forEach(round => { %>
              
              <% if(rounds.indexOf(round) == 0) { %>
                <br>
                <h2 class="text-center mt-4">Round 1 - Character Voices</h2>
                <h5 class="mb-3 col-lg-6 mx-auto clue-que orange">Famous Fictional Characters From TV & Movies. Simply Name The Character NOT The Actor/Actress.</h5>
              <% } %>

              <% if(rounds.indexOf(round) == 1) { %>
                <br>
                <h2 class="text-center mt-4">Round 2 - Guess The Voice</h2>
                <h5 class="mb-3 col-lg-6 mx-auto clue-que orange">Short Clips Of Famous People Talking, Simply Name The Person Thats Speaking.</h5>
              <% } %>

              <% if(rounds.indexOf(round) == 2) { %>
                <br>
                <h2 class="text-center mt-4">Round 3 - Songs</h2>
                <h5 class="mb-3 col-lg-6 mx-auto clue-que orange">Questions based on Gujarati Songs/folk music.</h5>
              <% } %>

              <% if(rounds.indexOf(round) == 3) { %>
                <br>
                <h2 class="text-center mt-4">Round 4 - Backwards Brainbusters</h2>
                <h5 class="mb-3 col-lg-6 mx-auto clue-que orange">Short Clips Of Famous Bollywood Songs, the challenge Is They Are Played Backwards.</h5>
              <% } %>

              <% round.forEach(element => { %>
                
                <div class="card">
                    <div class="card-body">
    
                        <p class="text-center my-5">Audio <%= element.number %></p>
                        <h5 class="mb-3 col-lg-6 mx-auto clue-que"><%= element.question %></h5>

                        <div class="audio-container mb-3 col-lg-6 mx-auto">
                          <audio controls controlsList="nodownload">
                              <source src="audio_trivia/audio/a<%= element.number %>.mp3" type="audio/mpeg">
                              Your browser does not support the audio element.
                          </audio>
                        </div>

                        <div class="mb-3 col-lg-6 mx-auto">
                            <label for="answer<%= element.number %>" class="form-label orange">Guess the answer</label>
                            <input type="text" class="form-control" id="answer<%= element.number %>" name="answer<%= element.number %>" autocomplete="off">
                        </div>
                    
                        
                    </div>
                </div>    
                <% }); %>
              <% }); %>

              <div class="row">
                <button id="submitBtn" type="submit" class="btn btn-warning my-4 col-lg-3 col-md-4 col-sm-10 mx-auto mt-5">Submit</button>
              </div>

            </form>

        </div>

       
